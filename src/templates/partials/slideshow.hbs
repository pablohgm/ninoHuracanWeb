<div class="showcase-slide">
	{{#each site.slideShowItems}}
    	<div class="slide {{cssClass}}">
    		<img src="{{image}}" alt="{{altImage}}">
	    </div>
	{{/each}}
</div>
<div class="showcase-toolbar">
    <div class="showcase-controls">
      <a class="prev-slide" href="#slideshow"><img class="prev-arrow"></a>  
      <a class="next-slide" href="#slideshow"><img class="next-arrow"></a>
    </div>  
    <ul class="indicators">
    {{#each site.slideShowItems}}
      <li>
        <a class="indicator indicator{{@index}}" href="#slideshow"><img class="indicator-pin indicator-pin{{@index}} {{indicatorCssClass}}"></a>
      </li>
		{{/each}}
    </ul>
</div>
<script language='javascript' type='text/javascript'>SLIDESHOW.TOOLBAR.init();</script>
